 <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_selector"> 
    
     <LinearLayout
        android:id="@+id/dialog_list_row_images"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
    
	    <LinearLayout 
	      	android:id="@+id/thumbnail_holder" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dip"
	      	android:layout_marginTop="8dip"
	      	android:layout_marginRight="5dip"
	      	android:layout_marginBottom="2dip"		
	       	android:background="#F9B700" 
		    >
	    
		    <ImageView 
		       android:id="@+id/itemImage"
		       android:layout_marginLeft="1dip"
		       android:layout_marginTop="1dip"
		       android:layout_marginRight="1dip"
		       android:layout_marginBottom="1dip"
		       android:layout_width="60dip"
		       android:layout_height="60dip"
		       android:gravity="center_vertical"
		       />
	     
	     	</LinearLayout>
	     	
	    	<ImageView 
		       android:id="@+id/bookImage"
		       android:layout_marginLeft="10dip"
		       android:layout_marginTop="0dip"
		       android:layout_marginRight="14dip"
		       android:layout_marginBottom="4dip"
		       android:layout_width="56dip"
		       android:layout_height="46dip"
		       android:gravity="center_vertical"
		       android:src="@drawable/bookicon"
		       />
	     	
	     </LinearLayout>
     
     <LinearLayout
        android:orientation="vertical" 
    	android:layout_width="340dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="4dip"> 

	     <TextView 
	        android:id="@+id/singleItem"
	        android:layout_width="280dip"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="20dp"
	        android:textColor="#00008a"
	        android:paddingLeft="4dp"
	         />
	     
	     <TextView
	        android:id="@+id/chapterReference"
	        android:layout_width="280dip"
	        android:layout_height="wrap_content"
	        android:textSize="18dp"
	        android:textColor="#00008a"
	        android:textStyle="italic"
	        android:paddingLeft="4dp"
	        android:text="Chapter 2, UltraAPEX User Guide"
	         />
	     
	     <TextView 
	        android:id="@+id/finePrint"
	        android:layout_width="340dip"
	        android:layout_height="fill_parent"
	        android:textSize="18dp"
	        android:textColor="#000000"
	        android:paddingLeft="4dp"
	        android:paddingTop="2dip"
	        android:layout_marginBottom="8dip"
	         />
	     
	    </LinearLayout>
	    
     	<RelativeLayout
        	android:orientation="vertical" 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"> 
	    
		     <ImageView 
		        android:id="@+id/logo_backing_backing"
		        android:layout_width="75dip"
		     	android:layout_height="60dip"
		     	android:src="@drawable/ultralogo"
		     	android:layout_marginLeft="0dip"
		     	android:layout_marginRight="8dip"
		     	android:layout_marginTop="6dip"
		     	android:layout_alignParentRight="true"
		     	/> 
		     
     	    <!-- Rightend Arrow -->    
		     <ImageView 
		        android:layout_width="16dip"
		     	android:layout_height="16dip"
		     	android:layout_marginLeft="0dip"
		     	android:layout_marginRight="8dip"
		     	android:layout_marginBottom="8dip"
		     	android:layout_alignParentBottom="true"
		     	android:layout_alignParentRight="true"
		     	android:src="@drawable/arrow"
		     	/>
		     
		 </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/tony.hillman/Documents/AndroidStudioBackups/MaterialWithTabs/V01/UAKP-all-22-1-21-g6/app/src/main/res/layout/list_row_content_for_dialog_for_four_zero___seven.xml -->