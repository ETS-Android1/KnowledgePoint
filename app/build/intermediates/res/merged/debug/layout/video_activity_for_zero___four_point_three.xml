<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/videobackground2">

    <LinearLayout
        android:id="@+id/theLinearLayout"
        style="@style/theLayout"
        android:layout_width="345dp"
        android:layout_height="199dip"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <VideoView
            android:id="@+id/imgFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/blackscreen" >
        </VideoView>
        
        </LinearLayout>
        
	<RelativeLayout
	    android:orientation="horizontal"
 	  	android:layout_width="fill_parent"
 	   	android:layout_height="fill_parent"
 	   	android:layout_marginBottom="2dp"
 	   	android:layout_marginTop="0dp" >
        
	    <ImageView
	        android:id="@+id/ultraLogo"
	        android:layout_marginLeft="378dp"
	        android:layout_marginRight="0dp"
	        android:layout_width="62dip"
	        android:layout_height="46dip"
	        android:layout_marginTop="2dp"
	        android:layout_marginBottom="6dp"
	        android:background="@drawable/ultralogo" />
        
	    <Button
            android:id="@+id/moreButton"
            android:layout_below="@+id/ultraLogo"
            android:layout_marginTop="0dp"
	        android:layout_width="120dip"
	        android:layout_height="38dip"
	        android:layout_marginLeft="356dp"
	        android:layout_marginRight="0dp"
            android:text="More Details"
            android:gravity="center"  
            android:textSize="5pt"
            />  
	    
	    <Button
            android:id="@+id/upButton"
            android:layout_below="@+id/moreButton"
            android:layout_marginTop="0dp"
	        android:layout_width="120dip"
	        android:layout_height="38dip"
	        android:layout_marginLeft="356dp"
	        android:layout_marginRight="0dp"
            android:text="All Videos"
            android:gravity="center" 
            android:textSize="5pt"
            />

        <Button
            android:id="@+id/leftButton"
            android:layout_marginTop="0dp"
	        android:layout_width="120dip"
	        android:layout_height="38dip"
	        android:layout_marginLeft="356dp"
	        android:layout_marginRight="0dp"
            android:text="Previous"
            android:gravity="center" 
            android:layout_below="@+id/upButton"
            android:textSize="5pt"
            />  
            
        <Button
            android:id="@+id/rightButton"
            android:layout_marginTop="0dip"
            android:layout_width="120dip"
	        android:layout_height="38dip"
            android:layout_marginLeft="356dp"
	        android:layout_marginRight="0dp"
            android:text="Next"
            android:gravity="center" 
            android:layout_below="@+id/leftButton"
            android:textSize="5pt"
            />  
     
	</RelativeLayout>
		            
</RelativeLayout><!-- From: file:/C:/Users/tony.hillman/Documents/AndroidStudioBackups/MaterialWithTabs/V01/UAKP-all-22-1-21-g6/app/src/main/res/layout/video_activity_for_zero___four_point_three.xml -->