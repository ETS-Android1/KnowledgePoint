<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/videobackground2">

    <LinearLayout
        android:id="@+id/theLinearLayout"
        style="@style/theLayout"
        android:layout_width="460dp"
        android:layout_height="268dip"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dp"
        android:orientation="horizontal" >

        <VideoView
            android:id="@+id/imgFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/blackscreen" >
        </VideoView>
        
        </LinearLayout>
        
	<RelativeLayout
	    android:orientation="horizontal"
 	  	android:layout_width="fill_parent"
 	   	android:layout_height="fill_parent"
 	   	android:layout_marginBottom="2dp"
 	   	android:layout_marginTop="0dp" >
        
	    <ImageView
	        android:id="@+id/ultraLogo"
	        android:layout_marginLeft="502dp"
	        android:layout_marginRight="0dp"
	        android:layout_width="75dip"
	        android:layout_height="58dip"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="16dp"
	        android:background="@drawable/ultralogo" />
        
	    <Button
            android:id="@+id/moreButton"
            android:layout_below="@+id/ultraLogo"
            android:layout_marginTop="0dp"
	        android:layout_width="140dip"
	        android:layout_height="42dip"
	        android:layout_marginLeft="470dp"
	        android:layout_marginRight="0dp"
            android:text="More Details"
            android:gravity="center"  
            android:textSize="8pt"
            />  
	    
	    <Button
            android:id="@+id/upButton"
            android:layout_below="@+id/moreButton"
            android:layout_marginTop="2dp"
	        android:layout_width="140dip"
	        android:layout_height="42dip"
	        android:layout_marginLeft="470dp"
	        android:layout_marginRight="0dp"
            android:text="All Videos"
            android:gravity="center" 
            android:textSize="8pt"
            />

        <Button
            android:id="@+id/leftButton"
            android:layout_marginTop="2dp"
	        android:layout_width="140dip"
	        android:layout_height="42dip"
	        android:layout_marginLeft="470dp"
	        android:layout_marginRight="0dp"
            android:text="Previous"
            android:gravity="center" 
            android:layout_below="@+id/upButton"
            android:textSize="8pt"
            />  
            
        <Button
            android:id="@+id/rightButton"
            android:layout_marginTop="2dip"
            android:layout_width="140dip"
	        android:layout_height="42dip"
            android:layout_marginLeft="470dp"
	        android:layout_marginRight="0dp"
            android:text="Next"
            android:gravity="center" 
            android:layout_below="@+id/leftButton"
            android:textSize="8pt"
            />  
     
	</RelativeLayout>
		            
</RelativeLayout><!-- From: file:/C:/Users/tony.hillman/Documents/AndroidStudioBackups/MaterialWithTabs/V01/UAKP-all-22-1-21-g6/app/src/main/res/layout/video_activity_for_seven_zero___five_point_seven.xml -->