<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theSplashScreenLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000" >

	<RelativeLayout
	    android:orientation="vertical"
 	  	android:layout_width="wrap_content"
 	   	android:layout_height="wrap_content"
 >
 	   	  
    	<ImageView
       		android:id="@+id/bookcoverimage"
        	android:layout_width="fill_parent" 
        	android:layout_height="832dip" />
	    
	    <Button
            android:id="@+id/documentContentsButton"
            android:layout_marginTop="640dip"
            android:layout_marginLeft="125dip"
            android:layout_width="173dp"
            android:layout_height="60dp"  
            android:text="Text"
            android:textSize="24sp"
            />
        
       <Button
            android:id="@+id/animationContentsButton"
            android:layout_marginTop="640dip"
            android:layout_marginLeft="5dip" 
            android:layout_width="173dp" 
            android:layout_height="60dp"
            android:text="Video"
            android:layout_toRightOf="@+id/documentContentsButton"
            android:textSize="24sp"
            />
       
       <Button
            android:id="@+id/voiceContentsButton"
            android:layout_marginTop="0dip"
            android:layout_marginLeft="125dip" 
            android:layout_width="173dp" 
            android:layout_height="60dp"
            android:text="Voice"
            android:layout_below="@+id/documentContentsButton"
            android:textSize="24sp"
            />  
            
		<Button
            android:id="@+id/suiteContentsButton"
            android:layout_marginTop="0dip"
            android:layout_marginLeft="5dip" 
            android:layout_width="173dp" 
            android:layout_height="60dp"
            android:text="Suite"
            android:layout_below="@+id/animationContentsButton"
            android:layout_toRightOf="@+id/voiceContentsButton"
            android:textSize="24sp"
            />  
        
	</RelativeLayout>

</LinearLayout>	
