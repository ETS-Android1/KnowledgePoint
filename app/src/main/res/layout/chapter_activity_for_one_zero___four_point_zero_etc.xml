<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"   
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
 
    <TextView
        android:id="@+id/my_textview"
        android:layout_width="300dip" 
        android:layout_height="34dip"
        android:background="@drawable/text_continuity_button"
        android:paddingTop="2dp" 
        android:textSize="5pt"
        android:textColor="#FFFFFF"/> 
        
    <ImageView
        android:id="@+id/contents_button"
        android:layout_marginLeft="280dp"
        android:layout_width="120dip"
        android:layout_height="34dip"
        android:background="@drawable/text_continuity_button"
        android:onClick="showPopUpMenu"
        android:src="@drawable/arrow_light_blue_xxsmall_down" />
    
        <TextView
        android:id="@+id/my_top_underscore"
        android:layout_width="388dip" 
        android:layout_height="2dip"
        android:background="@drawable/text_continuity_button"
        android:layout_marginTop="36dp"
        /> 

        <LinearLayout  
        android:layout_marginTop="0dip"
		android:orientation="horizontal"  
		android:layout_width="288dip"  
		android:layout_height="34dip"  
		android:paddingBottom="0dip"
		android:id="@+id/searchbox"  
  		>
  		
    	</LinearLayout> 
    	
    	<WebView
        android:id="@+id/my_webview"
        android:paddingTop="0dip"
        android:layout_width="388dip"
        android:layout_height="410dip"
        android:layout_marginTop="40dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:paddingBottom="0dip" 
        /> 

    <ImageView
        android:id="@+id/footbar0"
        android:layout_width="106dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/text_continuity_button"
        android:onClick="goToPreviousSection"
        android:src="@drawable/arrow_light_blue_xxsmall_left" />

    <ImageView
        android:id="@+id/footbar1"
        android:layout_width="118dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/text_continuity_button"
        android:onClick="returnToMenu"
        android:src="@drawable/arrow_light_blue_xxsmall_up" />

    <ImageView
        android:id="@+id/footbar2"
        android:layout_width="106dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/text_continuity_button"
        android:onClick="goToNextSection"
        android:src="@drawable/arrow_light_blue_xxsmall_right" />

</RelativeLayout>