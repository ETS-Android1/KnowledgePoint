<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/blankcover4">"
    
    <TextView
        android:id="@+id/my_textview"
        android:layout_width="330dip"
        android:layout_height="38dip"
        android:background="@drawable/text_continuity_button"
        android:paddingTop="7dp"
        android:textColor="#FFFFFF"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/my_top_underscore"
        android:layout_width="388dip"
        android:layout_height="2dip"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_continuity_button" />
    
    <Button
        android:id="@+id/btn_speak"
        android:layout_marginTop="52dip"
        android:layout_width="330dip"
        android:layout_height="48dip"
        android:layout_gravity="center" 
        android:textSize="18sp"       
         />
   <TextView
        android:id="@+id/textView0"
        android:textSize="18sp"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="106dip"
        android:layout_width="318dip"
        android:layout_height="46dip"
        android:padding="8dip"
        android:background="#000000"
        android:layout_gravity="center" />
   
     <TextView
        android:id="@+id/textView1"
        android:textSize="18sp"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="108dip"
        android:layout_width="314dip"
        android:layout_height="42dip"
        android:padding="8dip"
        android:background="#FFFFFF"
        android:layout_gravity="center" />
     
     <TextView
            android:id="@+id/imgFrame0"
            android:layout_width="108dip"
            android:layout_height="108dip"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="106dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="164dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="#000000"
             >
        </TextView>
     
     <TextView
            android:id="@+id/imgFrame1"
            android:layout_width="104dip"
            android:layout_height="104dip"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="108dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="166dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="#000000"
             >
        </TextView>
     
     <ImageView
            android:id="@+id/imgFrame"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="168dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
             >
        </ImageView>
    
     <Spinner
        android:id="@+id/theSpinner"
        android:textSize="14sp"
        android:textColor="#335495"
        android:layout_marginLeft="0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footbar"
        android:layout_marginBottom="6dp"
        android:drawSelectorOnTop="true"
        android:layout_marginTop="204dp"
    	android:prompt="@string/prompt"
        />
    
   <ImageView
        android:id="@+id/footbar"
        android:layout_width="338dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/text_continuity_button"
        android:onClick="returnToMenu"
        android:src="@drawable/arrow_light_blue_xxsmall_right" />
   
</RelativeLayout>
