<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"   
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
 
    <TextView
        android:id="@+id/my_textview"
        android:layout_width="800dip" 
        android:layout_height="80dip"
        android:background="@drawable/text_continuity_button"
        android:paddingTop="8dp" 
        android:textSize="10pt"
        android:textColor="#FFFFFF"/> 
        
    <TextView
        android:id="@+id/my_top_underscore"
        android:layout_width="796dip" 
        android:layout_height="4dip"
        android:background="@drawable/text_continuity_button"
        android:layout_marginTop="86dp"
        /> 

    <WebView
        android:id="@+id/my_webview"
        android:paddingTop="0dip"
        android:layout_width="800dip"
        android:layout_height="1018dip"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:paddingBottom="0dip"  
        android:textColorLink="#335495"
        /> 

    <ImageView
        android:id="@+id/footbar0"
        android:layout_width="800dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="2dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/text_continuity_button"
        android:onClick="goToPreviousSection"
        android:src="@drawable/arrow_light_blue_xxsmall_left" />
    
</RelativeLayout>