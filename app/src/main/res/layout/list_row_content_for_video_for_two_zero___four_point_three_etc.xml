 <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="112dip"
    android:background="@drawable/list_selector"> 
    
    <LinearLayout
        android:id="@+id/video_grid_images"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		
	    <LinearLayout 
	      	android:id="@+id/thumbnail_holder" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dip"
	      	android:layout_marginTop="8dip"
	      	android:layout_marginRight="5dip"
	      	android:layout_marginBottom="8dip"		
	       	android:background="#F9B700" 
		    >
	    
		    <ImageView 
		       android:id="@+id/thumbnail"
		       android:layout_marginLeft="1dip"
		       android:layout_marginTop="1dip"
		       android:layout_marginRight="1dip"
		       android:layout_marginBottom="1dip"
		       android:layout_width="45dip"
		       android:layout_height="45dip"
		       android:gravity="center_vertical"
		       />
	     
	     </LinearLayout>
	     
	    	<ImageView 
		       android:id="@+id/movie_camera"
		       android:layout_marginLeft="16dip"
		       android:layout_marginTop="0dip"
		       android:layout_marginRight="10dip"
		       android:layout_marginBottom="4dip"
		       android:layout_width="30dip"
		       android:layout_height="30dip"
		       android:gravity="center_vertical"
		       />
	     
	    </LinearLayout>
     
    <LinearLayout
        android:orientation="vertical" 
    	android:layout_width="200dip"
    	android:layout_height="100dip"
    	android:layout_marginTop="4dip"> 
    
	     <LinearLayout
	        android:orientation="vertical" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="70dip"
	    	android:layout_marginTop="4dip"> 
			
		     <TextView 
		        android:id="@+id/title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textStyle="bold"
		        android:textSize="12dp"
		        android:textColor="#00008a"
		        android:paddingLeft="4dp"
		         />   
		     
		     <TextView 
		        android:id="@+id/description"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="11dp"
		        android:textColor="#000000"
		        android:paddingLeft="4dp"
		        android:paddingTop="2dip"
		        android:layout_marginBottom="0dip"
		         />
		     
		 </LinearLayout>
		   
	     <LinearLayout
	        android:orientation="horizontal" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="20dip"
	    	android:layout_marginBottom="8dip"
	    	android:layout_marginRight="8dip"> 
	    	
		     <TextView
		        android:id="@+id/duration"
		        android:layout_width="120dip"
		        android:layout_height="wrap_content"
		        android:textSize="11dp"
		        android:textColor="#00008a"
		        android:textStyle="italic"
		        android:paddingLeft="4dp"
		        android:layout_marginBottom="0dip"
		        />
	    
		   	<!-- Invisible ID -->
		    <TextView
		        android:id="@+id/hidden_id"
		        android:layout_width="1dip"
		        android:layout_height="1dip" 
		        android:text="@+id/hidden_value"
		        android:visibility="gone" 
		        />

			 <!-- Rightend Arrow -->    
		     <ImageView 
		        android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"
		     	android:layout_marginLeft="60dip"
		     	android:src="@drawable/arrow"
		     	android:layout_marginTop="2dip"
		     	android:layout_marginBottom="0dip"
		     	/>
	    	
	     </LinearLayout>
		   
	   </LinearLayout>

</LinearLayout>