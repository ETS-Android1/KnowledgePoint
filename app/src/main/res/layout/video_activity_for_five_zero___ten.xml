<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/videobackground2">

    <LinearLayout
        android:id="@+id/theLinearLayout"
        style="@style/theLayout"
        android:layout_width="774dp"
        android:layout_height="439dip"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <VideoView
            android:id="@+id/imgFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/blackscreen" >
        </VideoView>
        
    </LinearLayout>
        
	<RelativeLayout
	    android:orientation="horizontal"
 	  	android:layout_width="fill_parent"
 	   	android:layout_height="fill_parent"
 	   	android:layout_marginBottom="2dp"
 	   	android:layout_marginTop="40dp" >
        
	    <ImageView
	        android:id="@+id/ultraLogo"
	        android:layout_marginLeft="830dp"
	        android:layout_marginRight="0dp"
	        android:layout_width="112dip"
	        android:layout_height="87dip"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="16dp"
	        android:background="@drawable/ultralogo" />
        
	    <Button
            android:id="@+id/moreButton"
            android:layout_below="@+id/ultraLogo"
            android:layout_marginTop="0dp"
	        android:layout_width="210dip"
	        android:layout_height="63dip"
	        android:layout_marginLeft="784dp"
	        android:layout_marginRight="0dp"
            android:text="More Details"
            android:gravity="center"  
            android:textSize="10pt"
            />  
	    
	    <Button
            android:id="@+id/upButton"
            android:layout_below="@+id/moreButton"
            android:layout_marginTop="2dp"
	        android:layout_width="210dip"
	        android:layout_height="63dip"
	        android:layout_marginLeft="784dp"
	        android:layout_marginRight="0dp"
            android:text="All Videos"
            android:gravity="center" 
            android:textSize="10pt"
            />

        <Button
            android:id="@+id/leftButton"
            android:layout_marginTop="2dp"
	        android:layout_width="210dip"
	        android:layout_height="63dip"
	        android:layout_marginLeft="784dp"
	        android:layout_marginRight="0dp"
            android:text="Previous"
            android:gravity="center" 
            android:layout_below="@+id/upButton"
            android:textSize="10pt"
            />  
            
        <Button
            android:id="@+id/rightButton"
            android:layout_marginTop="2dip"
            android:layout_width="210dip"
	        android:layout_height="63dip"
            android:layout_marginLeft="784dp"
	        android:layout_marginRight="0dp"
            android:text="Next"
            android:gravity="center" 
            android:layout_below="@+id/leftButton"
            android:textSize="10pt"
            />  
     
	</RelativeLayout>
		            
</RelativeLayout>