<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theSplashScreenLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000" >

	<RelativeLayout
	    android:orientation="vertical"
 	  	android:layout_width="wrap_content"
 	   	android:layout_height="wrap_content"
 >
 	   	  
    	<ImageView
       		android:id="@+id/bookcoverimage"
        	android:layout_width="900dip" 
        	android:layout_height="1200dip" />
	    
	    <Button
            android:id="@+id/documentContentsButton"
            android:layout_marginTop="675dip"
            android:layout_marginLeft="150dip"
            android:layout_width="156dp"
            android:layout_height="54dp"  
            android:textSize="22sp"
            android:text="Text"
            />
        
       <Button
            android:id="@+id/animationContentsButton"
            android:layout_marginTop="675dip"
            android:layout_marginLeft="5dip" 
            android:layout_width="156dp" 
            android:layout_height="54dp"
            android:textSize="22sp"
            android:text="Video"
            android:layout_toRightOf="@+id/documentContentsButton"
            />
       
       <Button
            android:id="@+id/voiceContentsButton"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="150dip" 
            android:layout_width="156dp" 
            android:layout_height="54dp"
            android:textSize="22sp"
            android:text="Voice"
            android:layout_below="@+id/documentContentsButton"
            />  
            
		<Button
            android:id="@+id/suiteContentsButton"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip" 
            android:layout_width="156dp" 
            android:layout_height="54dp"
            android:textSize="22sp"
            android:text="Suite"
            android:layout_below="@+id/animationContentsButton"
            android:layout_toRightOf="@+id/voiceContentsButton"
            />  
        
	</RelativeLayout>

</LinearLayout>	
