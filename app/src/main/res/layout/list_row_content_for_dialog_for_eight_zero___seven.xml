 <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_selector"> 
    
     <LinearLayout
        android:id="@+id/dialog_list_row_images"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
    
	    <LinearLayout 
	      	android:id="@+id/thumbnail_holder" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dip"
	      	android:layout_marginTop="16dip"
	      	android:layout_marginRight="10dip"
	      	android:layout_marginBottom="4dip"		
	       	android:background="#F9B700" 
		    >
	    
		    <ImageView 
		       android:id="@+id/itemImage"
		       android:layout_marginLeft="2dip"
		       android:layout_marginTop="2dip"
		       android:layout_marginRight="2dip"
		       android:layout_marginBottom="2dip"
		       android:layout_width="90dip"
		       android:layout_height="90dip"
		       android:gravity="center_vertical"
		       />
	     
	     	</LinearLayout>
	     	
	    	<ImageView 
		       android:id="@+id/bookImage"
		       android:layout_marginLeft="20dip"
		       android:layout_marginTop="0dip"
		       android:layout_marginRight="28dip"
		       android:layout_marginBottom="8dip"
		       android:layout_width="84dip"
		       android:layout_height="69dip"
		       android:gravity="center_vertical"
		       android:src="@drawable/bookicon"
		       />
	     	
	     </LinearLayout>
     
     <LinearLayout
        android:orientation="vertical" 
    	android:layout_width="400dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="8dip"> 

	     <TextView 
	        android:id="@+id/singleItem"
	        android:layout_width="380dip"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="26dp"
	        android:textColor="#00008a"
	        android:paddingLeft="0dp"
	         />
	     
	     <TextView
	        android:id="@+id/chapterReference"
	        android:layout_width="380dip"
	        android:layout_height="wrap_content"
	        android:textSize="18dp"
	        android:textColor="#00008a"
	        android:textStyle="italic"
	        android:paddingLeft="0dp"
	         />
	     
	     <TextView 
	        android:id="@+id/finePrint"
	        android:layout_width="380dip"
	        android:layout_height="fill_parent"
	        android:textSize="16dp"
	        android:textColor="#000000"
	        android:paddingLeft="0dp"
	        android:paddingTop="4dip"
	        android:layout_marginBottom="16dip"
	         />
	     
	    </LinearLayout>
	    
     	<RelativeLayout
        	android:orientation="vertical" 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"> 
	    
		     <ImageView 
		        android:id="@+id/logo_backing_backing"
		        android:layout_width="57dip"
		     	android:layout_height="46dip"
		     	android:src="@drawable/ultralogo"
		     	android:layout_marginLeft="0dip"
		     	android:layout_marginRight="16dip"
		     	android:layout_marginTop="8dip"
		     	android:layout_alignParentRight="true"
		     	/> 
		     
     	    <!-- Rightend Arrow -->    
		     <ImageView 
		        android:layout_width="24dip"
		     	android:layout_height="24dip"
		     	android:layout_marginLeft="0dip"
		     	android:layout_marginRight="16dip"
		     	android:layout_marginBottom="12dip"
		     	android:layout_alignParentBottom="true"
		     	android:layout_alignParentRight="true"
		     	android:src="@drawable/arrow"
		     	/>
		     
		 </RelativeLayout>

</LinearLayout>